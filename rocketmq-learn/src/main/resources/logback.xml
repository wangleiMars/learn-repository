<configuration  scan="true" scanPeriod="60 seconds" debug="false">
	<!-- 定义日志文件 输入位置 -->
	<property name="log_dir" value="f:/logs" />
	<!-- 日志最大的历史 30天 -->

	<property name="maxHistory" value="360"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%file : %line] %msg%n</pattern>
		</encoder>
	</appender>


	<!-- logback为java中的包 -->
	<logger name="com.mars.rocketmq.learn.bean" level="debug" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="RocketmqClient" level="warn" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="java.sql.PreparedStatement" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="java.sql.Connection" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="java.sql.Statement" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="com.ibatis" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="com.ibatis.common.jdbc.SimpleDataSource" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="com.ibatis.common.jdbc.ScriptRunner" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="org.springframework.web.servlet.mvc.method.annotation.AbstractMessageConverterMethodProcessor" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="org.springframework.web.servlet.handler.AbstractHandlerMethodMapping" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	<logger name="org.springframework.web.servlet.DispatcherServlet" value="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
